<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/palette2"
    android:orientation="vertical"
    tools:context=".modules.documents.DocumentDetailActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palette2" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@drawable/palette5" >

            <EditText
                android:id="@+id/et_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="15"
                android:background="@drawable/palette2"
                android:ems="10"
                android:singleLine="true" />

        </FrameLayout>

		<ImageButton
		    android:id="@+id/ib_guardar"
		    android:layout_width="42dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="1dp"
		    android:layout_marginRight="1dp"
		    android:background="@drawable/palette9press"
		    android:src="@drawable/ic_action_exportw" />

        <ImageButton
            android:id="@+id/ib_limpiar"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:background="@drawable/palette9press"
            android:src="@drawable/ic_action_documentw" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/palette4"
                android:gravity="center"
                android:text="@string/barras_escaneadas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

            <ListView
                android:id="@+id/lv_listbarras"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.62" >
            </ListView>

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/palette4"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.74"
                    android:text="@string/total_articulos"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.74"
                    android:gravity="right"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>