<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/palette2"
    android:orientation="vertical"
    tools:context=".DetailDocuments" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palette2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/palette5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_descripcion1"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1.5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/tv_descripcion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textIsSelectable="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_descripcion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/tv_descripcion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_excel"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/palette9press"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_excel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.00" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/palette4" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ScrollView
                        android:id="@+id/sv_datos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_compra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/palette5"
                                android:paddingLeft="5dp"
                                android:text="@string/info_compra"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Button
                                android:id="@+id/bt_fecha"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/palette7press"
                                android:text="@string/fecha"
                                android:textColor="#ffffff" />

                            <Button
                                android:id="@+id/bt_bodega"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/palette7press"
                                android:text="@string/bodega"
                                android:textColor="#ffffff" />

                            <EditText
                                android:id="@+id/et_dcredito"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/dcredito"
                                android:inputType="number" />

                            <EditText
                                android:id="@+id/et_ncompra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/ncompra"
                                android:singleLine="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/tv_guia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/palette5"
                                    android:paddingLeft="5dp"
                                    android:text="@string/info_guia"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/bt_recibe"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/palette7press"
                                android:text="@string/recibido"
                                android:textColor="#ffffff" />

                            <Button
                                android:id="@+id/bt_transportadora"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_margin="0.5dp"
                                android:background="@drawable/palette7press"
                                android:text="@string/transportadora"
                                android:textColor="#ffffff" />

                            <Button
                                android:id="@+id/bt_fechar"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/palette7press"
                                android:text="@string/fecha_recibido"
                                android:textColor="#ffffff" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <EditText
                                    android:id="@+id/et_nguia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:hint="@string/nguia"
                                    android:singleLine="true" >

                                    <requestFocus />
                                </EditText>

                                <ImageButton
                                    android:id="@+id/ib_barcode_guia"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/palette7press"
                                    android:contentDescription="TODO"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:src="@drawable/ic_action_barcode_1w" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/et_peso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/pesos"
                                android:inputType="numberDecimal" />

                            <EditText
                                android:id="@+id/et_ncajas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/ncajas"
                                android:inputType="number" />
                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:id="@+id/ly_productos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_list_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/palette4"
                            android:gravity="center"
                            android:text="@string/lista_productos"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ffffff" />

                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollView1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" >

                            <LinearLayout
                                android:id="@+id/LinearLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/palette2"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="816dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/tv_cant"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/cantidad"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_costo"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/costo"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_iva"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/iva"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_pdescuento"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/descuento"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_neto"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/neto"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_descuento"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/descuento"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_tiva"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/tiva"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/tv_total"
                                        android:layout_width="102dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="@string/total"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />
                                </LinearLayout>

                                <ListView
                                    android:id="@+id/lv_template"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:descendantFocusability="beforeDescendants" >
                                </ListView>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_guardar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/palette7press"
                android:drawableLeft="@drawable/ic_action_exportw"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="@string/guardar"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/palette4"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.74"
                        android:text="@string/stotal"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_stotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.74"
                        android:gravity="right"
                        android:text="@string/cero"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/palette4"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.74"
                        android:text="@string/descuento"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_tdescuento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.74"
                        android:gravity="right"
                        android:text="@string/cero"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/palette4"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.74"
                        android:text="@string/iva"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_giva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.74"
                        android:gravity="right"
                        android:text="@string/cero"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/palette4"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.74"
                        android:text="@string/total"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_gtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.74"
                        android:gravity="right"
                        android:text="@string/cero"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>