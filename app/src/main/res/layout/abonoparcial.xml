<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/palette3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palette5"
        android:gravity="center_horizontal"
        android:text="@string/abono_parcial"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palette4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/LinerLayoutBaseDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_base_desuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/base_descuento"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_vbase_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinerLayoutTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/tv_total_documento"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:layout_weight="1"
	            android:text="@string/total_factura"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_vtotal_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinerLayoutDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/palette3" >

	        <TextView
	            android:id="@+id/tv_total_descuentos"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
	            android:layout_marginLeft="10dp"
	            android:text="@string/mdescuento"
	            android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_descuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinerLayoutAbonos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/palette3" >

	        <TextView
	            android:id="@+id/tv_total_abonos"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:layout_weight="10"
	            android:layout_marginLeft="10dp"
	            android:text="@string/abono"
	            android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_abono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:gravity="right"
                android:inputType="numberDecimal" />

            <ImageButton
                android:id="@+id/im_abono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_action_moneyh" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinerLayoutSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/tv_saldo_documento"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="10dp"
	            android:text="@string/saldo"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_vsaldo_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

        </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/desc1"
            android:inputType="numberDecimal" >

        </EditText>
        <TextView
            android:id="@+id/tv_vdesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/desc2"
            android:inputType="numberDecimal" >

        </EditText>

        <TextView
            android:id="@+id/tv_vdesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/desc3"
            android:inputType="numberDecimal" >

        </EditText>

        <TextView
            android:id="@+id/tv_vdesc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>
    
</LinearLayout>