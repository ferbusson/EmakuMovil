<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/palette2"
    android:orientation="vertical"
    tools:context=".DetailDocuments" >

    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content"
        android:background="@drawable/palette4" >

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_blanck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:background="@drawable/palette3"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_falta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/palette3"
                android:text="@string/faltantes"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_sobra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="@string/sobrantes"
                android:background="@drawable/palette3"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tv_diff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="@string/diferencia"
                android:background="@drawable/palette3"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_unds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="@string/unidades"
                android:background="@drawable/palette3"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_undfalta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="right"
                android:background="@drawable/palette3"
                android:text="@string/cero"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_undsobra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="right"
                android:background="@drawable/palette3"
                android:text="@string/cero"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tv_undsdiff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="right"
                android:background="@drawable/palette3"
                android:text="@string/cero"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_pesos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/palette3"
                android:gravity="center"
                android:text="@string/pesos"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_pfalta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="right"
                android:background="@drawable/palette3"
                android:text="@string/cero"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_psobra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="right"
                android:text="@string/cero"
                android:background="@drawable/palette3"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tv_psdiff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="right"
                android:text="@string/cero"
                android:background="@drawable/palette3"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/palette4"
                android:gravity="center"
                android:text="@string/productos_inconsistentes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

            <ListView
                android:id="@+id/lv_listajuste"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.62" >
            </ListView>

		    <Button
		        android:id="@+id/bt_guardar"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="1dp"
		        android:background="@drawable/palette7press"
		        android:drawableLeft="@drawable/ic_action_exportw"
		        android:gravity="left|center_vertical"
		        android:padding="10dp"
		        android:text="@string/guardar_doc"
		        android:textColor="#ffffff" />

    </LinearLayout>



</LinearLayout>